<%= form_with model: @item do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control', placeholder: '例：心臓マッサージ' %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div> 
    【タグが入る行】
  </div>
  <div> 
   YouTube shortsの動画URLを貼りつけてください
  </div>
  <div class="form-group">
    <%= f.label :item_url %>
    <%= f.text_field :item_url, class: 'form-control', id: 'item_url' %>
  </div>

  <div class="actions">
    <%= f.submit '作成', class: 'btn btn-primary' %>
  </div>
  <div id="preview"></div>
<% end %>
