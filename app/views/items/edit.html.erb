<h1><%= t('.title') %></h1>
<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
    <%= render 'form', { item: @item } %>
    </div>
  </div>
</div>

<% if flash[:success] %>
  <div class="alert alert-success">
    <%= flash[:success] %>
  </div>
<% end %>

<% if flash[:danger] %>
  <div class="alert alert-danger">
    <%= flash[:danger] %>
  </div>
<% end %>
